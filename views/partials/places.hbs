<img src="{{this.picPath}}" alt="">
<h1>{{this.kioskName}}</h1>

<button type="button" class="btn btn-primary">
<a href="/comments/{{this.id}}">Comments</a>
</button>




<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Details
</button>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Details Kiosk</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <ul>
          <li><img src="{{this.picPath}}" alt="" width = "300px"> </li>
          <li>{{this.kioskName}}</li>
          <li> {{this.location}}</li>
          <li>{{this.wifi}}</li>
          <li>{{this.drinks}}</li>
          <li>{{this.internationalPress}}</li>
          <li>{{this.cards}}</li>
          <li>{{this.kidsCards}}</li>
          <li>{{this.cigarettes}}</li>
          <li>{{this.rate}}</li>

        </ul>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>
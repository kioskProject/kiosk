
<div class = "containerKiosk">


<div class = "elementsKiosk">
<img src="{{this.picPath}}" alt="" height="300px" width= "400px">

<h1>{{this.kioskName}}</h1>

<button type="button" class="btn btn-primary">
  <a href="/comments/{{this.id}}">Comments</a>
</button>




<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Details
</button>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <h1 class = "titleModal">Details Kiosk</h1>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <ul>
          <li><img src="{{this.picPath}}" alt="" width="300px"> </li>
          <br><br>
          <li class= "titleModal">{{this.kioskName}}</li>
            <br><br>

          <li> <b>Location:</b>
            {{#if this.location}} Yes
            {{else}} No
            {{/if}}
          </li>
          <li><b>Wifi: </b>
            {{#if this.wifi}} Yes
            {{else}} No
            {{/if}}
          </li>
          <li> Drinks:
            {{#if this.drinks}} Yes
            {{else}} No
            {{/if}}
          </li>
          <li>
          <li>Cigarretes:
            {{#if this.cigarettes}} Yes
            {{else}} No
            {{/if}}
          </li>
          <li>Souvenirs:
            {{#if this.souvenirs}} Yes
            {{else}} No
            {{/if}}
          </li>
          <li>{{this.rate}}</li>

        </ul>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>
</div>
</div>
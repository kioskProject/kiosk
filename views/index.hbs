<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<section class="homePicture">
<div class="banner">
  <div class="banner__overlay">
    <div class="banner__container">
      <h1 class="banner__title">KIOSK</h1>
      <p class="banner__text">WiFi · Cigarettes · Drinks · Souvenirs</p>
      <a href="#" class="btn btn--opacity">SEARCH</a>
    </div>
    <img class="banner__scroll-down" src="data:image/svg+xml;utf8;base64," />

  </div>
</div>
</section>



<section class="3BlocksDescription">
<div class="sect sect--type">
  <div class="container">
    <div class="row row--center">
      <div class="col-md-5 col-xs-8 col-sm-6 col--inbl">
        <h1 class="sect__title">We believe in enjoying Kiosks</h1>
      <p class="sect__subtitle">
